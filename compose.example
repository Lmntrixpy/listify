services:
  web:
    container_name: listify-web
    build: ./web
    env_file: .env
    expose:
      - "8000"
    restart: unless-stopped
    networks:
      - internal_net

  nginx:
    container_name: listify-nginx
    image: nginx:1.27-alpine
    depends_on:
      - web
    ports:
      - "3080:80"
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
    restart: unless-stopped
    networks:
      - internal_net

networks:
  internal_net:
    driver: bridge